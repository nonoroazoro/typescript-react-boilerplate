{
    "compilerOptions": {
        "rootDir": "src",
        "module": "es6",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ]
}
