{
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/@coverage",
    "globals": {
        "ts-jest": {
            "diagnostics": {
                "ignoreCodes": [
                    151001
                ]
            }
        }
    },
    "moduleFileExtensions": [
        "js",
        "ts",
        "tsx"
    ],
    "moduleNameMapper": {
        "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/scripts/jest/__mocks__/fileMock.ts",
        "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
        "<rootDir>/scripts/jest/jest.setup.ts"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "/tests/.+\\.(test|spec)\\.tsx?$",
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
}
